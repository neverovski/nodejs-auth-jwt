{
  "name": "nodejs-auth-sql",
  "version": "0.1.1",
  "description": "Node.js for Token Based Authentication (access and refresh) with PostgreSQL database.",
  "main": "src/index.ts",
  "scripts": {
    "start:dev": "tsc-watch --onSuccess \"ts-node ./src/index.ts\" | pino-pretty",
    "start:prod": "node -r ts-node/register -r tsconfig-paths/register build/index.js | pino-pretty",
    "build": "tsc -p tsconfig.build.json && cp ./tsconfig.json ./build/",
    "build:windows": "tsc -p tsconfig.build.json && copy .\\tsconfig.json .\\build\\",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "eslint \"src/**/*.ts\" --fix",
    "test:unit": "NODE_ENV=test mocha -r ts-node/register tests/unit/**/*.test.ts",
    "test:integration": "NODE_ENV=test mocha -r ts-node/register tests/integration/**/*.test.ts",
    "test:e2e": "NODE_ENV=test mocha -r ts-node/register tests/e2e/**/*.test.ts",
    "coverage:unit": "nyc -r lcov -e .ts -x \"*.test.ts\" npm run test:unit",
    "coverage:integration": "nyc -r lcov -e .ts -x \"*.test.ts\" npm run test:integration",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "migrate:create": "ts-node ./node_modules/typeorm/cli.js migration:create -n",
    "migrate:generate": "ts-node ./node_modules/typeorm/cli.js migration:generate -n",
    "migrate:run": "ts-node ./node_modules/typeorm/cli.js migration:run",
    "migrate:revert": "ts-node ./node_modules/typeorm/cli.js migration:revert",
    "prepare": "husky install",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neverovski/nodejs-auth-sql.git"
  },
  "author": "Dmitry Neverovski",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/neverovski/nodejs-auth-sql/issues"
  },
  "engines": {
    "node": "^16",
    "npm": "^8"
  },
  "homepage": "https://github.com/neverovski/nodejs-auth-sql#readme",
  "dependencies": {
    "ajv": "^8.10.0",
    "ajv-formats": "^2.1.1",
    "ajv-keywords": "^5.1.0",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.2",
    "bull": "^4.8.1",
    "class-transformer": "^0.5.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^2.28.0",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "helmet": "^5.0.2",
    "joi": "^17.6.0",
    "json-schema": "^0.4.0",
    "jsonwebtoken": "^8.5.1",
    "ms": "^2.1.3",
    "nanoid": "^3.3.1",
    "nodemailer": "^6.7.3",
    "pg": "^8.7.3",
    "pino": "^7.9.2",
    "pino-pretty": "^7.5.4",
    "tsyringe": "^4.6.0",
    "typeorm": "^0.2.41"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/bull": "^3.15.8",
    "@types/chai": "^4.3.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/json-schema": "^7.0.10",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mocha": "^9.1.0",
    "@types/ms": "^0.7.31",
    "@types/node": "^17.0.22",
    "@types/nodemailer": "^6.4.4",
    "@types/pg": "^8.6.5",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "commitizen": "^4.2.4",
    "commitlint-config-cz": "^0.13.3",
    "cz-conventional-changelog": "3.3.0",
    "cz-customizable": "^6.3.0",
    "eslint": "^8.11.0",
    "eslint-config-airbnb-typescript": "^16.1.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-typescript-sort-keys": "^2.1.0",
    "husky": "^7.0.4",
    "mocha": "^9.2.2",
    "nyc": "^15.1.0",
    "prettier": "^2.6.0",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.7.0",
    "tsc-watch": "^4.6.2",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.2"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  }
}
