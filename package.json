{
  "name": "nodejs-auth-sql",
  "version": "0.1.4",
  "description": "Node.js for Token Based Authentication (access and refresh) with PostgreSQL database.",
  "main": "src/index.ts",
  "scripts": {
    "start:dev": "tsc-watch --onSuccess \"ts-node ./src/index.ts\" | pino-pretty",
    "start:prod": "node build/index.js | pino-pretty",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "eslint \"src/**/*.ts\" --fix",
    "test:unit": "NODE_ENV=test mocha -r ts-node/register tests/unit/**/*.test.ts",
    "test:integration": "NODE_ENV=test mocha -r ts-node/register tests/integration/**/*.test.ts",
    "test:e2e": "NODE_ENV=test mocha -r ts-node/register tests/e2e/**/*.test.ts",
    "coverage:unit": "nyc -r lcov -e .ts -x \"*.test.ts\" npm run test:unit",
    "coverage:integration": "nyc -r lcov -e .ts -x \"*.test.ts\" test:integration",
    "typeorm": "NODE_ENV=cli node -r ts-node/register ./node_modules/typeorm/cli.js",
    "migrate:create": "NODE_ENV=cli typeorm migration:create src/db/migration/$npm_config_name",
    "migrate:run": "NODE_ENV=cli node -r ts-node/register ./node_modules/typeorm/cli.js migration:run -d src/db/typeorm/data-source.ts",
    "migrate:revert": "NODE_ENV=cli node -r ts-node/register ./node_modules/typeorm/cli.js migration:revert -d ./src/db/typeorm/data-source.ts",
    "migrate:show": "NODE_ENV=cli node -r ts-node/register ./node_modules/typeorm/cli.js migration:show -d ./src/db/typeorm/data-source.ts",
    "prepare": "husky install",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neverovski/nodejs-auth-sql.git"
  },
  "author": "Dmitry Neverovski",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/neverovski/nodejs-auth-sql/issues"
  },
  "engines": {
    "node": "^16",
    "npm": "^8"
  },
  "homepage": "https://github.com/neverovski/nodejs-auth-sql#readme",
  "dependencies": {
    "@fullerstack/nax-ipware": "^0.10.0",
    "ajv": "^8.11.0",
    "ajv-formats": "^2.1.1",
    "ajv-keywords": "^5.1.0",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.20.0",
    "bull": "^4.8.4",
    "class-transformer": "^0.5.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^2.28.0",
    "date-fns-tz": "^1.3.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-pino-logger": "^7.0.0",
    "express-prom-bundle": "^6.5.0",
    "helmet": "^5.1.0",
    "joi": "^17.6.0",
    "json-schema": "^0.4.0",
    "jsonwebtoken": "^8.5.1",
    "ms": "^2.1.3",
    "nanoid": "^3.3.4",
    "nodemailer": "^6.7.5",
    "pg": "^8.7.3",
    "pino": "^8.1.0",
    "pino-pretty": "^8.1.0",
    "pino-seq": "^0.9.0",
    "prom-client": "^14.0.1",
    "tsyringe": "^4.7.0",
    "typeorm": "^0.3.6",
    "ua-parser-js": "^1.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/bull": "^3.15.8",
    "@types/chai": "^4.3.1",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-pino-logger": "^4.0.3",
    "@types/json-schema": "^7.0.11",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mocha": "^9.1.1",
    "@types/ms": "^0.7.31",
    "@types/node": "^18.0.0",
    "@types/nodemailer": "^6.4.4",
    "@types/pg": "^8.6.5",
    "@types/ua-parser-js": "^0.7.36",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "commitizen": "^4.2.4",
    "commitlint-config-cz": "^0.13.3",
    "cz-conventional-changelog": "3.3.0",
    "cz-customizable": "^6.7.0",
    "eslint": "^8.18.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.1.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.1.0",
    "eslint-plugin-typescript-sort-keys": "^2.1.0",
    "husky": "^8.0.1",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.8.1",
    "tsc-alias": "^1.6.11",
    "tsc-watch": "^5.0.3",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  }
}
